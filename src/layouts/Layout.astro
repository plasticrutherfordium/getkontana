---
export interface Props {
	title: string;
}

import '../styles/global.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/kontana-favicon.svg" />
		<link rel="icon" href="/kontana-favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Kontana is a free, privacy-first cash tracker that runs on your device. Track spending, build better habits, and rely less on banks — no account linking." />
		<meta name="keywords" content="cash tracker, privacy, offline, on-device, no bank, personal finance, budgeting, spending tracker" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="A free, privacy-first cash tracker that runs on your device — no bank linking." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://getkontana.com" />
		<meta property="og:image" content="/og-image.jpg" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="A free, privacy-first cash tracker that runs on your device — no bank linking." />
		<meta name="twitter:image" content="/og-image.jpg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
