---
import Layout from './Layout.astro';
import '../styles/app.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="app-frame">
    <aside class="app-sidebar">
      <div class="app-brand-lockup">
        <a href="/" aria-label="Kontana home">
          <img src="/kontana-logo.svg" alt="Kontana" class="app-brand-logo" />
        </a>
      </div>
      <slot name="sidebar" />
    </aside>
    <main class="app-main">
      <slot />
    </main>
  </div>
</Layout>
