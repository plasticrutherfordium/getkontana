---
import Layout from './Layout.astro';
import '../styles/app.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="app-frame">
    <aside class="app-sidebar">
      <div class="app-brand-lockup">
        <a href="/" aria-label="Kontana home">
          <img src="/kontana-logo.svg" alt="Kontana" class="app-brand-logo" />
        </a>
      </div>
      <slot name="sidebar" />
    </aside>
    <main class="app-main">
      <slot />
    </main>
    <nav class="app-bottom-nav" aria-label="Primary">
      <a href="/app" class="bottom-nav-link" data-tab="cash">
        <span>Cash</span>
      </a>
      <a href="/app" class="bottom-nav-link" data-tab="transactions">
        <span>Transactions</span>
      </a>
      <a href="/app" class="bottom-nav-link" data-tab="settings">
        <span>Settings</span>
      </a>
    </nav>
  </div>
</Layout>
