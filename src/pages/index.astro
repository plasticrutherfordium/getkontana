<style>
	:global {
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		html {
			scroll-behavior: smooth;
		}

		body {
			font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
			line-height: 1.5;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
			color: #eaf6ef;
			background:
				radial-gradient(1000px 600px at 25% -10%, rgba(16, 185, 129, 0.28), transparent 55%),
				radial-gradient(900px 500px at 80% 10%, rgba(34, 197, 94, 0.18), transparent 55%),
				#060b08;
		}

		.container {
			max-width: 1100px;
			margin: 0 auto;
			padding: 0 20px;
		}

		a {
			color: inherit;
		}

		.btn {
			display: inline-flex;
			align-items: center;
			justify-content: center;
			gap: 10px;
			padding: 12px 18px;
			text-decoration: none;
			border-radius: 12px;
			font-weight: 650;
			letter-spacing: 0.2px;
			transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.15s ease, border-color 0.15s ease;
			cursor: pointer;
			border: 1px solid rgba(234, 246, 239, 0.12);
			background: rgba(234, 246, 239, 0.04);
			backdrop-filter: blur(10px);
		}

		.btn:hover {
			transform: translateY(-1px);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
		}

		.btn-primary {
			border-color: rgba(16, 185, 129, 0.5);
			background: linear-gradient(135deg, #10b981 0%, #22c55e 45%, #34d399 100%);
			color: #04100a;
			box-shadow: 0 18px 40px rgba(16, 185, 129, 0.18);
		}

		.btn-primary:hover {
			box-shadow: 0 24px 70px rgba(16, 185, 129, 0.26);
		}

		.btn-secondary {
			background: rgba(234, 246, 239, 0.04);
			border-color: rgba(234, 246, 239, 0.16);
			color: #eaf6ef;
		}

		.btn-outline {
			background: transparent;
			border-color: rgba(16, 185, 129, 0.45);
			color: #a7f3d0;
		}

		.btn-large {
			padding: 14px 22px;
			font-size: 16px;
		}

		.section-header {
			text-align: center;
			margin-bottom: 40px;
		}

		.section-header h2 {
			font-size: 2.2rem;
			line-height: 1.15;
			letter-spacing: -0.03em;
			margin-bottom: 12px;
		}

		.section-header p {
			font-size: 1.05rem;
			color: rgba(234, 246, 239, 0.75);
			max-width: 720px;
			margin: 0 auto;
		}
	}

	.navbar {
		position: sticky;
		top: 0;
		z-index: 1000;
		background: rgba(6, 11, 8, 0.7);
		border-bottom: 1px solid rgba(234, 246, 239, 0.08);
		backdrop-filter: blur(16px);
	}

	.nav-container {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 20px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 72px;
	}

	.nav-logo a {
		font-size: 1.05rem;
		font-weight: 800;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		text-decoration: none;
		color: #a7f3d0;
	}

	.nav-menu {
		display: flex;
		list-style: none;
		gap: 18px;
		align-items: center;
	}

	.nav-menu a {
		text-decoration: none;
		color: rgba(234, 246, 239, 0.78);
		font-weight: 600;
		padding: 10px 10px;
		border-radius: 10px;
		transition: background 0.15s ease, color 0.15s ease;
	}

	.nav-menu a:hover {
		color: #eaf6ef;
		background: rgba(234, 246, 239, 0.06);
	}

	.nav-menu .btn-primary {
		padding: 10px 14px;
		border-radius: 12px;
		color: #04100a;
	}

	.nav-toggle {
		display: none;
		flex-direction: column;
		cursor: pointer;
	}

	.nav-toggle span {
		width: 25px;
		height: 3px;
		background: rgba(234, 246, 239, 0.75);
		margin: 3px 0;
		transition: 0.3s;
	}

	.hero {
		padding: 84px 0 36px;
	}

	.hero-container {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 20px;
		display: grid;
		grid-template-columns: 1.1fr 0.9fr;
		gap: 48px;
		align-items: center;
	}

	.hero-kicker {
		color: rgba(167, 243, 208, 0.9);
		font-weight: 700;
		letter-spacing: 0.06em;
		text-transform: uppercase;
		font-size: 0.85rem;
		margin-bottom: 14px;
	}

	.hero-title {
		font-size: 3.25rem;
		line-height: 1.02;
		letter-spacing: -0.04em;
		margin-bottom: 16px;
	}

	.hero-subtitle {
		font-size: 1.12rem;
		color: rgba(234, 246, 239, 0.78);
		margin-bottom: 28px;
		max-width: 44ch;
	}

	.hero-actions {
		display: flex;
		gap: 12px;
		margin-bottom: 26px;
		flex-wrap: wrap;
	}

	.hero-stats {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 12px;
	}

	.stat {
		padding: 14px 14px;
		border-radius: 14px;
		border: 1px solid rgba(234, 246, 239, 0.1);
		background: rgba(234, 246, 239, 0.04);
		backdrop-filter: blur(10px);
	}

	.stat-number {
		display: block;
		font-size: 1rem;
		font-weight: 750;
		color: #eaf6ef;
		margin-bottom: 4px;
	}

	.stat-label {
		color: rgba(234, 246, 239, 0.65);
		font-size: 0.9rem;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.dashboard-preview {
		border-radius: 18px;
		border: 1px solid rgba(234, 246, 239, 0.12);
		background: rgba(234, 246, 239, 0.05);
		box-shadow: 0 30px 90px rgba(0, 0, 0, 0.45);
		width: 420px;
		height: 310px;
		padding: 18px;
		position: relative;
		overflow: hidden;
	}

	.dashboard-preview::before {
		content: '';
		position: absolute;
		inset: -40% -30% auto -30%;
		height: 220px;
		background: radial-gradient(circle at 30% 40%, rgba(16, 185, 129, 0.35), transparent 55%);
		pointer-events: none;
	}

	.dashboard-header {
		background: rgba(234, 246, 239, 0.08);
		height: 42px;
		border-radius: 12px;
		margin-bottom: 16px;
		border: 1px solid rgba(234, 246, 239, 0.1);
	}

	.dashboard-content {
		background: rgba(234, 246, 239, 0.06);
		height: 190px;
		border-radius: 12px;
		margin-bottom: 14px;
		border: 1px solid rgba(234, 246, 239, 0.1);
	}

	.dashboard-sidebar {
		background: rgba(16, 185, 129, 0.16);
		width: 90px;
		height: 210px;
		border-radius: 12px;
		position: absolute;
		right: 18px;
		top: 70px;
		border: 1px solid rgba(16, 185, 129, 0.3);
	}

	.features,
	.solutions,
	.security,
	.pricing,
	.faq {
		padding: 72px 0;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		gap: 14px;
	}

	.feature-card {
		grid-column: span 6;
		padding: 22px 20px;
		border-radius: 18px;
		border: 1px solid rgba(234, 246, 239, 0.1);
		background: rgba(234, 246, 239, 0.04);
		box-shadow: 0 20px 70px rgba(0, 0, 0, 0.35);
	}

	.feature-icon {
		width: 44px;
		height: 44px;
		display: grid;
		place-items: center;
		border-radius: 14px;
		background: rgba(16, 185, 129, 0.16);
		border: 1px solid rgba(16, 185, 129, 0.35);
		margin-bottom: 14px;
		font-size: 1.2rem;
	}

	.feature-card h3 {
		font-size: 1.15rem;
		letter-spacing: -0.02em;
		margin-bottom: 8px;
	}

	.feature-card p {
		color: rgba(234, 246, 239, 0.72);
		line-height: 1.6;
	}

	.solutions-grid,
	.security-grid,
	.pricing-grid {
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		gap: 14px;
	}

	.solution-card,
	.security-card {
		grid-column: span 4;
		padding: 22px 20px;
		border-radius: 18px;
		border: 1px solid rgba(234, 246, 239, 0.1);
		background: rgba(234, 246, 239, 0.04);
	}

	.solution-card h3,
	.security-card h3 {
		font-size: 1.15rem;
		margin-bottom: 8px;
	}

	.solution-card p,
	.security-card p {
		color: rgba(234, 246, 239, 0.72);
		line-height: 1.6;
	}

	.pricing-card {
		grid-column: span 4;
		padding: 26px 22px;
		border-radius: 20px;
		border: 1px solid rgba(234, 246, 239, 0.1);
		background: rgba(234, 246, 239, 0.04);
		position: relative;
	}

	.pricing-card.featured {
